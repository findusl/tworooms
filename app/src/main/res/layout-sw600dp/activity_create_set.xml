<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".setListActivity">

    <!--
    This layout is a two-pane layout for the sets
    master/detail flow.

    -->

    <fragment android:id="@+id/create_set_fragment" android:name="de.lehrbaum.tworooms.view.createSet.CreateSetFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
        tools:layout="@layout/fragment_create_set" />

    <FrameLayout android:id="@+id/choose_role_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="1" />

</LinearLayout>
